@using Microsoft.AspNetCore.Identity
@using RealityFirst.Areas.Identity.Data

@inject SignInManager<RealityFirstUser> SignInManager
@inject UserManager<RealityFirstUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white">Cerrar Sesión</button>
        </form>
    </li>
}
</ul>
